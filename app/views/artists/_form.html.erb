<%= form_for(@artist, type: :file) do |f| %>
  <% if @artist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@artist.errors.count, "error") %>
          prohibited this artist from being saved:</h2>

      <ul>
        <% @artist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :country %><br />
    <%= f.text_field :country %>
  </div>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="field" style="margin-bottom: 5px;">
    <%= f.label "Artist Photo" %><br />
    <%= f.file_field :ar_cover %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
