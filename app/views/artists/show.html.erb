<%= render 'shared/menu' %>

<div class="show-container">
  <h1><%= @artist.name %></h1>

  <p><%= image_tag(@artist.image, class: "artist_img") %></p>

  <h3><%= @artist.country %></h3>

  <p><%= simple_format @artist.bio %></p>


  <h2> Songs </h2>

  <% songs = @artist.songs.sort_by { |song| song.year } %>

  <%= render songs, hide_artist: true %>
</div>
